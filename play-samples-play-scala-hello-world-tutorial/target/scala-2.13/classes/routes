# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /user/name/:name                    controllers.UserController.findByName(name: String)
GET     /user/:id                           controllers.UserController.findByName(id: String)
POST    /user                               controllers.UserController.create
PUT     /user/:id                           controllers.UserController.update(id: String)
DELETE  /user/:id                           controllers.UserController.delete(id: String)
GET     /product/:id                        controllers.ProductController.findById(id: String)
POST    /product                            controllers.ProductController.insert
DELETE  /product/:id                        controllers.ProductController.delete(id: String)
GET     /shoppingLogs/:id                   controllers.ShoppingLogController.findByKey(id: String)
POST    /shoppingLogs                       controllers.ShoppingLogController.insert
DELETE  /shoppingLogs/:id                   controllers.ShoppingLogController.delete(id: String)